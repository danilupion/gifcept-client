{
  "name": "gifcept-client",
  "version": "0.1.0",
  "repository": "git@github.com:tomaccodev/gifcept-client.git",
  "author": {
    "name": "Dani Lupi√≥n",
    "email": "danilupion@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@types/jwt-decode": "^2.2.1",
    "jwt-decode": "^2.2.0",
    "mobx": "^5.0.0",
    "mobx-react": "^5.2.0",
    "moment": "^2.22.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-modal": "^3.4.5",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "2.16.0"
  },
  "scripts": {
    "test": "CI=true react-scripts-ts test --env=jsdom",
    "test-watch": "react-scripts-ts test --env=jsdom",
    "start": "react-scripts-ts start",
    "build": "yarn build-css && react-scripts-ts build",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "pretty": "prettier --write",
    "pretty-all": "yarn pretty \"{src,__tests__}/**/*.{ts,tsx}\"",
    "lint": "tslint",
    "lint-all": "yarn lint \"{src,__tests__}/**/*.{ts,tsx}\"",
    "precommit": "lint-staged && yarn test"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn pretty",
      "yarn lint",
      "git add"
    ]
  },
  "proxy": {
    "/api/*": {
      "target": "http://localhost:3002"
    },
    "/*[.](gif|png)": {
      "target": "http://localhost:3002"
    }
  },
  "devDependencies": {
    "@types/facebook-js-sdk": "^2.8.4",
    "@types/jest": "^23.0.0",
    "@types/moment": "^2.13.0",
    "@types/node": "^10.3.1",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.6",
    "@types/react-modal": "^3.1.2",
    "lint-staged": "^7.1.3",
    "node-sass-chokidar": "^1.3.0",
    "prettier": "^1.13.4",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.1"
  }
}
